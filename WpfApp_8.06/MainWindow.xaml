<Window x:Class="WpfApp_8._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_8._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter the file path:" Margin="10"/>
        <TextBox x:Name="FilePathTextBox" Grid.Row="0" Margin="10" Width="200" HorizontalAlignment="Left"/>

        <TextBlock Text="Enter the word to search:" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="WordTextBox" Grid.Row="1" Margin="10" Width="200" HorizontalAlignment="Left"/>

        <Button Content="Search Word" Click="SearchWord_Click" Grid.Row="2" HorizontalAlignment="Center" Margin="10"/>

        <TextBlock x:Name="ResultTextBlock" Grid.Row="3" Margin="10"/>
    </Grid>
</Window>
