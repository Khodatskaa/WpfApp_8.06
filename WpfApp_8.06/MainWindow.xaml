<Window x:Class="WpfApp_8._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_8._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Source Directory Path:" Margin="10"/>
        <TextBox x:Name="SourceDirectoryPathTextBox" Grid.Row="0" Margin="10" TextWrapping="Wrap"/>
        <Button Content="Browse" Click="BrowseSourceDirectory_Click" Grid.Row="0" HorizontalAlignment="Right" Margin="10"/>

        <TextBlock Text="Destination Path:" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="DestinationPathTextBox" Grid.Row="1" Margin="10" TextWrapping="Wrap"/>
        <Button Content="Browse" Click="BrowseDestination_Click" Grid.Row="1" HorizontalAlignment="Right" Margin="10"/>

        <TextBlock Text="Number of Threads:" Grid.Row="2" Margin="10"/>
        <ComboBox x:Name="ThreadsComboBox" Grid.Row="2" Margin="10">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
        </ComboBox>

        <Button x:Name="StartCopyButton" Content="Start Copy" Click="StartCopy_Click" Grid.Row="3" HorizontalAlignment="Center" Margin="10"/>
        <Button x:Name="PauseCopyButton" Content="Pause" Click="PauseCopy_Click" Grid.Row="3" HorizontalAlignment="Left" Margin="10"/>
        <Button x:Name="CancelCopyButton" Content="Cancel" Click="CancelCopy_Click" Grid.Row="3" HorizontalAlignment="Right" Margin="10"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="4" Margin="10" Height="20"/>
    </Grid>
</Window>
